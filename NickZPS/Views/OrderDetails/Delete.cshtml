@model NickZPS.Models.OrderDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>OrderDetail</legend>

    <div class="display-label">UnitPrice</div>
    <div class="display-field">@String.Format("{0:F}", Model.UnitPrice)</div>

    <div class="display-label">Quantity</div>
    <div class="display-field">@Model.Quantity</div>

    <div class="display-label">Discount</div>
    <div class="display-field">@Model.Discount</div>

    <div class="display-label">Order</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Order).ToString()</div>

    <div class="display-label">Product</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Product).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


