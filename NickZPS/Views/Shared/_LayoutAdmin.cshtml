<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/dashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Zara Pet Store Admin</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Settings</a></li>
                    <li>@Html.ActionLink("FrontEnd", "Index", "Home")</li>
                    <li><a href="#">Help</a></li>
                </ul>
                <form class="navbar-form navbar-right">
                    <input type="text" class="form-control" placeholder="Search...">
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    @*<li class="active"><a href="#">Overview</a></li>*@
                    <li>@Html.ActionLink("Category", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Product", "Index", "Products")</li>
                    <li>@Html.ActionLink("Order", "Index", "Orders")</li>
                    <li>@Html.ActionLink("OrderDetail", "Index", "OrderDetails")</li>
                    <li>@Html.ActionLink("Invoice", "Index", "Invoices")</li>
                    <li>@Html.ActionLink("InvoiceDetail", "Index", "InvoiceDetails")</li>
                    <li>@Html.ActionLink("Shipper", "Index", "Shippers")</li>
                    <li>@Html.ActionLink("Recommendation", "Index", "Recommendations")</li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li>@Html.ActionLink("User", "Index", "SysUsers")</li>
                    <li>@Html.ActionLink("Role", "Index", "SysRoles")</li>
                    <li>@Html.ActionLink("UserRole", "Index", "SysUserRoles")</li>
                    <li>@Html.ActionLink("Feedback", "Index", "Feedbacks")</li>
                </ul>

            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <div class="row placeholders">
                    @RenderBody()
                </div>

            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
