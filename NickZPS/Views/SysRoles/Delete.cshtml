@model NickZPS.Models.SysRole

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>SysRole</legend>

    <div class="display-label">RoleName</div>
    <div class="display-field">@Model.RoleName</div>

    <div class="display-label">RoleDesc</div>
    <div class="display-field">@Model.RoleDesc</div>

    <div class="display-label">SysUserRoles</div>
    <div class="display-field">@(Model.SysUserRoles == null ? "None" : Model.SysUserRoles.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


