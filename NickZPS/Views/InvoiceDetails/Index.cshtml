@model IEnumerable<NickZPS.Models.InvoiceDetail>

@{
    ViewBag.Title = "Index";
}

<h2>InvoiceDetail List</h2>

<p>
    @Html.ActionLink("Create New InvoiceDetail", "Create")
</p>
<table style="width:100%">
    <tr>
        <th>Operation</th>
        <th>
            Invoice
        </th>
        <th>
            Product
        </th>
        <th>
            UnitPrice
        </th>
        <th>
            Quantity
        </th>
        <th>
            Discount
        </th>
        <th>
            OrderDate
        </th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayTextFor(_ => item.Invoice.InvoiceID).ToString()
            </td>
            <td>
                @Html.DisplayTextFor(_ => item.Product.ProductName).ToString()
            </td>
            <td>
                @String.Format("{0:F}", item.UnitPrice)
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.Discount
            </td>
            <td>
                @String.Format("{0:g}", item.OrderDate)
            </td>

        </tr>
    }

</table>
