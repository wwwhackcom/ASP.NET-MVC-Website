@model NickZPS.Models.SysUser

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>SysUser</legend>

    <div class="display-label">UserName</div>
    <div class="display-field">@Model.UserName</div>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">Password</div>
    <div class="display-field">@Model.Password</div>

    <div class="display-label">FirstName</div>
    <div class="display-field">@Model.FirstName</div>

    <div class="display-label">LastName</div>
    <div class="display-field">@Model.LastName</div>

    <div class="display-label">Phone</div>
    <div class="display-field">@Model.Phone</div>

    <div class="display-label">DOB</div>
    <div class="display-field">@String.Format("{0:g}", Model.DOB)</div>

    <div class="display-label">Desc</div>
    <div class="display-field">@Model.Desc</div>

    <div class="display-label">AvararPath</div>
    <div class="display-field">@Model.AvararPath</div>

    <div class="display-label">SysUserRoles</div>
    <div class="display-field">@(Model.SysUserRoles == null ? "None" : Model.SysUserRoles.Count.ToString())</div>

    <div class="display-label">Orders</div>
    <div class="display-field">@(Model.Orders == null ? "None" : Model.Orders.Count.ToString())</div>

    <div class="display-label">Invoices</div>
    <div class="display-field">@(Model.Invoices == null ? "None" : Model.Invoices.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


