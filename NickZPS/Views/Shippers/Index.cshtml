@model IEnumerable<NickZPS.Models.Shipper>

@{
    ViewBag.Title = "Shipper";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="width:100%">
    <tr>
        <th>Operation</th>
        <th>
            CompanyName
        </th>
        <th>
            Phone
        </th>
        <th>
            Orders
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ShipperID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ShipperID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ShipperID })
        </td>
        <td>
			@item.CompanyName
        </td>
        <td>
			@item.Phone
        </td>
        <td>
			@(item.Orders == null ? "None" : item.Orders.Count.ToString())
        </td>
    </tr>
}

</table>


