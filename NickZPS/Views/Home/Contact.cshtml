
@{
    ViewBag.Title = "Contact";
}

<style>
    #map {
        width: 100%;
        height: 300px;
        background-color: grey;
    }
</style>



<!-- Contact -->
<div class="w3-container" id="contact" style="margin-top:50px;font-family:Poppins, sans-serif">
    <h1 class="w3-xxxlarge w3-text-grey"><b>Contact.</b></h1>
    <hr style="width:50px;border:5px solid grey" class="w3-round">
    
    <p>Do you want us to help your pet? Fill out the form and fill me in with the details :) We love meeting new people!</p>
    <form action="/Home/Contact" method="post" target="_blank">
        <div class="w3-section">
            <label>Name</label>
            <input class="w3-input w3-border" type="text" name="UserName" required>
        </div>
        <div class="w3-section">
            <label>Email</label>
            <input class="w3-input w3-border" type="text" name="Email" required>
        </div>
        <div class="w3-section">
            <label>Message</label>
            <input class="w3-input w3-border" type="text" name="Message" required>
        </div>
        <br />
        <p>@ViewBag.Message</p>
        <button type="submit" class="w3-button w3-block w3-padding-large w3-red w3-margin-bottom">Send Message</button>
    </form>
    <br/>
    <address>
        Zara Pet Store Ltd. <br />
        Queet Street, <br />
        Auckland Central, Auckland 1010<br />
        <abbr title="Phone">P:</abbr>
        02108809536
    </address>
    <address>
        <strong>Support:</strong>   <a href="mailto:Support@zps.co.nz">Support@zps.co.nz</a><br />
        <strong>Marketing:</strong> <a href="mailto:Marketing@zps.co.nz">Marketing@zps.co.nz</a>
    </address>

    <div id="map"></div>
    <script>
      function initMap() {
          var uluru = {lat: -36.855037, lng: 174.763005};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 10,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCj_vOkk7raC-2HmmrfqzoomheV9a2Ee9I&callback=initMap">
    </script>
</div>